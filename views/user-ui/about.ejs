<%- include('../layout/ui-header.ejs') %>
    <!-- section start -->
    <div class="breadcumb-wrapper ">
        <div class="parallax" data-parallax-image="/assets/img/about-bg.jpg"></div>
        <div class="container z-index-common">
            <div class="breadcumb-content">
                <h1 class="breadcumb-title">About Us</h1>
                <div class="breadcumb-menu-wrap">
                    <i class="far fa-home-lg"></i>
                    <ul class="breadcumb-menu">
                        <li><a href="/">Home</a></li>
                        <li class="active">About Us</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!--==============================
    About Area
    ==============================-->
    <section class="vs-about-wrapper space">
        <div class="container">
            <div class="row flex-row-reverse align-items-center">
                <% about.forEach(about=> { %>
                    <div class="col-lg-6 mb-40 mb-lg-0">
                        <div>
                            <img class="w-100" src="/uploads/<%= about.aboutImage %>" alt="about">
                        </div>
                    </div>
                    <div class="col-lg-6 align-self-center">
                        <div class="about-content mb-2 ">
                            <span class="sec-subtitle text-theme h3 mb-2 mb-sm-0">
                                <%= about.heading %>
                            </span>
                            <p class="pt-2">
                                <%- about.description %>
                            </p>
                            <a href="/about" class="vs-btn">Learn More</a>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
    </section>
    <!--==============================
			Footer Area
	==============================-->
    <%- include('../layout/ui-footer.ejs') %>