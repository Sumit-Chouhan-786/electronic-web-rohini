<%- include('../layout/ui-header.ejs') %>
    <!--==============================
    Breadcumb
============================== -->
    <div class="breadcumb-wrapper ">
        <div class="parallax" data-parallax-image="/assets/img/about-bg.jpg"></div>
        <div class="container z-index-common">
            <div class="breadcumb-content">
                <h1 class="breadcumb-title">Our Products</h1>
                <div class="breadcumb-menu-wrap">
                    <i class="far fa-home-lg"></i>
                    <ul class="breadcumb-menu">
                        <li><a href="/">Home</a></li>
                        <li class="active">Our Products</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!--==============================
    Service Area
    ==============================-->
    <section class="vs-service-wrapper space-top space-md-bottom">
        <div class="container">
            <div class="row">
                    <% services.forEach(service=> {
                        if (service.category === "Adult cardiac disease") { %>
                        <div class="col-md-6 col-xl-3 col-lg-4">
                            <div class="service-thumb">
                                <div class="sr-img">
                                    <img style="max-height: 350px;min-height: 350px;object-fit: contain;" class="w-100"
                                        src="/uploads/<%= service.image %>" alt="Service Image">
                                </div>
                                <div class="sr-body">
                                    <span class="sr-icon"><i class="flaticon-discuss fa-3x"></i></span>
                                    <h3 class="h4 sr-title">
                                        <a class="text-reset" href="/service-details/<%= service.id %>">
                                            <%= service.name %>
                                        </a>
                                    </h3>
                                    <div class="sr-content">
                                        <a href="/service-details/<%= service.id %>" class="link-btn">
                                            View More<i class="fal fa-long-arrow-right"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } }); %>

                </div>
        </div>
    </section>
    <!--==============================
			Footer Area
	==============================-->
    <%- include('../layout/ui-footer.ejs') %>